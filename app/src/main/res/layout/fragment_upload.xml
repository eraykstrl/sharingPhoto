<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UploadFragment"
    android:background="#CFD8DC"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/upload_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <EditText
        android:id="@+id/commentText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Ne düşünüyorsun"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:background="@drawable/text_border"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Yükle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentText"
        android:background="@drawable/button_border"
        android:textColor="#FFF59D"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />


    <LinearLayout
        android:id="@+id/navBottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/homePageImageView"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/homepage_icon"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/newPostImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/new_post_icon"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/messageImageView"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/message_icon"
            android:layout_weight="1"

            />

        <ImageView
            android:id="@+id/profileImageView"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile_icon"
            android:layout_weight="1"

            />
        <ImageView
            android:id="@+id/settingsImageView"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/settings_icon"
            android:layout_weight="1"

            />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>