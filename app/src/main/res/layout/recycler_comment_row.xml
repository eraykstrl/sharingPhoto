<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/commentRecyclerViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usernamealan"
        android:textSize="20sp"
        android:textAlignment="viewStart"
        android:ellipsize="end"
        android:padding="2dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/commentRecyclerViewEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Deneme çok uzun bir yorum yazısı..."
        android:textSize="20sp"
        android:textAlignment="viewStart"
        android:singleLine="false"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:lineSpacingExtra="2dp"
        android:padding="2dp"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/commentImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/comment_options_icon"
        android:contentDescription="Seçenekler"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/modifyCommentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone"
        android:background="@drawable/button_border"
        android:textColor="@color/amber_custom"
        />

</LinearLayout>
