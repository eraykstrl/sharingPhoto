<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SettingsFragment"
    android:background="@drawable/background_design"

    >
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="For Scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navBottomLayout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrolConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/settingsTextView"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayarlar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:textColor="@color/black"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settingsTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/newPasswordTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Şifrenizi Yenileyin"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/followerRequest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newPasswordTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Takip İstekleri"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/newFriendTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/followerRequest"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Ağınızı Genişletin"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/sentFollowRequest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newFriendTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Gönderdiğiniz İstekler"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/aboutUsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sentFollowRequest"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Hakkımızda"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/verifyEmailTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutUsTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="E-posta Doğrula"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/accountSettingsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/verifyEmailTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Hesap Ayarları"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/frequentlyQuestionsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountSettingsTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Sıkça Sorulan Sorular"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/savedPost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frequentlyQuestionsTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Kaydedilen Gönderiler"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/notificationTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/savedPost"
                app:layout_constraintBottom_toTopOf="@+id/deleteAccountTextView"
                android:textSize="24sp"
                android:background="@drawable/cards_border"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Bildirim Ayarları"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/burgundy"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/deleteAccountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/cards_border"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hesabı Sil"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/notificationTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/burgundy"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/reachUsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cards_border"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Bize Ulaşın"
                android:textColor="@color/burgundy"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deleteAccountTextView"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/logOutTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/cards_border"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Çıkış Yap"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/reachUsTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"

                android:textColor="@color/burgundy"
                android:textStyle="bold"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/navBottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/homePageImageView"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/homepage_icon"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/newPostImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/new_post_icon"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/messageImageView"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/message_icon"
            android:layout_weight="1"

            />

        <ImageView
            android:id="@+id/profileImageView"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile_icon"
            android:layout_weight="1"

            />
        <ImageView
            android:id="@+id/settingsImageView"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/settings_icon"
            android:layout_weight="1"

            />



    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
