<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/verifyEmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail Adresini Doğrula"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:id="@+id/verifyEmailDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lütfen mail adresinizi doğrulayın. Mail kutunuza bir doğrulama linki gönderilecektir."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/verifyEmailTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            app:layout_constraintTop_toBottomOf="@id/verifyEmailDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/verifyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Doğrula"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="#FFF59D"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/emailTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            app:layout_constraintTop_toBottomOf="@id/verifyButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/verifyEmailDesc2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email adresinizi değiştirmek istiyorsanız lütfen yeni mail adresinizi giriniz."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/newEmailEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Yeni Email (opsiyonel)"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            app:layout_constraintTop_toBottomOf="@id/verifyEmailDesc2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email Değiştir"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="#FFF59D"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/newEmailEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
