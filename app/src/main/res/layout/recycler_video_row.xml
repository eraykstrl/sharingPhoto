<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/white"
    android:elevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <androidx.media3.ui.PlayerView
            android:id="@+id/recyclerPlayer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/post_border"
            app:use_controller="true"
            app:keep_content_on_player_reset="true"/>

        <ImageView
            android:id="@+id/postSettingsImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/post_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="top|end"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/usernameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="User Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/postOwnerComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/savePostModify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:visibility="gone"
        android:background="@drawable/button_border"
        android:textColor="@color/amber_custom"/>

    <LinearLayout
        android:id="@+id/elementsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/likeImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/heart"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/commentImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/comment"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/sendImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/send"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/numberLikeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="123 Likes"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/numberCommentsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="45 Comments"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/sendingNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10 Shares"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Yorum: "
        android:visibility="gone"
        android:inputType="textMultiLine"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/commentSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GÃ¶nder"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:background="@drawable/button_border"
        android:textColor="@color/amber_custom"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/secondRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:nestedScrollingEnabled="false"/>


</LinearLayout>
